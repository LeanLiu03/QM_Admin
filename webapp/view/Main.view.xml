<mvc:View controllerName="QM_Admin.controller.Main" xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml" height = "100%"
	xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:tnt="sap.tnt">
	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button id="sideNavigationToggleButton" icon="sap-icon://menu2" type="Transparent" press="onSideNavigationPress">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer></ToolbarSpacer>
				<Button id="userInfo" type="Transparent" tooltip = "Administration" text="Lean.Liu" press="onUserPress"></Button>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation id = "sideNavigation" expanded="true" itemSelect = "onItemSelect">
				<tnt:item>
					<tnt:NavigationList>
						<tnt:NavigationListItem text="{i18n>project}" icon = "sap-icon://project-definition-triangle-2">
							<tnt:NavigationListItem text="{i18n>overview}" id = "nav_Overview" key = "overview"></tnt:NavigationListItem>
							<tnt:NavigationListItem text="{i18n>new_Project}" id = "nav_NewProject" key = "newProject" ></tnt:NavigationListItem>
							<tnt:NavigationListItem text="{i18n>edit_Project}" id = "nav_EditProject" key = "editProject" ></tnt:NavigationListItem>
								<tnt:NavigationListItem text="{i18n>display_Project}" id = "nav_DisplayProject" key = "displayProject" ></tnt:NavigationListItem>
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:item>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer id="pageContent">
				<mvc:XMLView viewName = "QM_Admin.view.Overview" id = "overview" />
				<mvc:XMLView viewName = "QM_Admin.view.New_Project" id = "newProject" />
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>