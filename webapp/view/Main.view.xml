	<tnt:ToolPage id="toolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button id="sideNavigationToggleButton" icon="sap-icon://menu2" type="Transparent" press="onSideNavigationPress">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer></ToolbarSpacer>
				<Button id="userInfo" type="Transparent" tooltip = "Administration" text="Lean.Liu" press="onUserPress"></Button>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation id = "sideNavigation" expanded="true">
				<tnt:item>
					<tnt:NavigationList>
						<tnt:NavigationListItem text="{i18n>project}" icon = "sap-icon://project-definition-triangle-2">
							<tnt:NavigationListItem text="{i18n>overview}"></tnt:NavigationListItem>
							<tnt:NavigationListItem text="{i18n>new_project}"></tnt:NavigationListItem>
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:item>
				<tnt:fixedItem>
					<tnt:NavigationList>
						<tnt:NavigationListItem text="Overview" icon = "sap-icon://menu2"/>
						<tnt:NavigationListItem text="{i18n>overview}"/>
						<tnt:NavigationListItem text="{i18n>overview}"/>
						<tnt:NavigationListItem text="{i18n>overview}"/>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
