<mvc:View controllerName="QM_Admin.controller.Process_Project" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:tb="sap.ui.table">
	<Page title="{ProjectData>/ProjectTitle}">
		<!--<VBox>-->
		<IconTabBar id="itbProject" expandable="true" class="sapUiResponsiveContentPadding">
			<items>
				<IconTabFilter id="itfBasicInfo" text="General Data">
					<f:SimpleForm id="sfmBasicInfo" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0"
						columnsL="2" columnsM="2" class="editableForm" title="General Data">
						<f:content>
							<!--<f:FormContainer>-->
							<!--<l:HorizontalLayout>-->
							<core:Title text="{i18n>projectData}" emphasized="true"/>
							<Label id="lblProjectName" text="{i18n>projectName}" labelFor="iptProjectName" required="true"></Label>
							<Input id="iptProjectName" liveChange = "onDataChange" value = "{ProjectData>/ProjectName}" enabled = "{= ${ProjectData>/mode} === 'C'}">
								<layoutData>
									<l:GridData span="L6 M6 S8"/>
								</layoutData>
							</Input>
							<!--Project Description-->
							<Label id="lblProjectDesc" text="{i18n>projectDesc}" labelFor="txaProjectDesc"/>
							<TextArea id="txaProjectDesc" rows="3" liveChange = "onDataChange" value = "{ProjectData>/Description}" enabled = "{= ${ProjectData>/mode} !== ''}">
								<layoutData>
									<l:GridData span="L6 M6 S8"/>
								</layoutData>
							</TextArea>
							<!--</l:HorizontalLayout>-->
							<Label id="lblProjectType" text="{i18n>projectType}" labelFor="sltProjectType" required="true"></Label>
							<!--Project Type-->
							<Select id="sltProjectType" change="onPrjTypeChange" forceSelection="true" enabled = "{= ${ProjectData>/mode} !== ''}" selectedKey = "{ProjectData>/ProjectType}">
								<layoutData>
									<l:GridData span="L6 M6 S8"/>
								</layoutData>
							</Select>
							<!--Project Size-->
							<Label id="lblProjectSize" text="{i18n>projectSize}" labelFor="sltProjectSize" required="true"/>
							<Select id="sltProjectSize" change = "onDataChange" forceSelection="true" enabled = "{= ${ProjectData>/mode} !== ''}" selectedKey = "{ProjectData>/ProjectSize}">
								<layoutData>
									<l:GridData span="L6 M6 S8"/>
								</layoutData>
								<items>
									<core:Item text="{i18n>ps_small}" key="PS_SMALL"></core:Item>
									<core:Item text="{i18n>ps_medium}" key="PS_MEDIUM"></core:Item>
									<core:Item text="{i18n>ps_large}" key="PS_LARGE"></core:Item>
									<core:Item text="{i18n>ps_xlarge}" key="PS_XLARGE"></core:Item>
								</items>
							</Select>
							<!--Methodology-->
							<Label id="lblMethodology" text="{i18n>methodology}" labelFor="sltProjectSize" required="true"/>
							<Select id="sltMethodology" forceSelection="true" enabled = "{= ${ProjectData>/mode} !== ''}" change="onMethodologyChange" selectedKey = "{ProjectData>/Methodology}">
								<layoutData>
									<l:GridData span="L6 M6 S8"/>
								</layoutData>
							</Select>
							<Label id="lblRegion" text="{i18n>region}" labelFor="sltRegion" required="true"/>
							<Select id="sltRegion" forceSelection="true" change = "onDataChange" enabled = "{= ${ProjectData>/mode} !== ''}" selectedKey = "{ProjectData>/Region}">
								<layoutData>
									<l:GridData span="L6 M6 S8"/>
								</layoutData>
								<items>
									<core:Item key="PS_BLANK"></core:Item>
									<core:Item text="{i18n>emea}" key="RGN_EMEA"></core:Item>
									<core:Item text="{i18n>apj}" key="RGN_APJ"></core:Item>
									<core:Item text="{i18n>ua}" key="RGN_UA"></core:Item>
									<core:Item text="{i18n>cn}" key="RGN_CN"></core:Item>
								</items>
							</Select>
							<core:Title text="{i18n>manager}" emphasized="true"/>
							<!--Project Manager-->
							<Label id="lblProjectManager" text="{i18n>projectManager}" labelFor="iptProjectName" required="true"></Label>
							<Input id="iptProjectManager" liveChange = "onDataChange" showValueHelp="true" enabled = "{= ${ProjectData>/mode} !== ''}" value = "{ProjectData>/ProjectManager}">
								<layoutData>
									<l:GridData span="L6 M6 S8"/>
								</layoutData>
							</Input>
							<!--Project Manager-->
							<Label id="lblQMManager" text="{i18n>qMManager}" labelFor="iptQMManager" required="true"></Label>
							<Input id="iptQMManager" showValueHelp="true" liveChange = "onDataChange" enabled = "{= ${ProjectData>/mode} !== ''}" value = "{ProjectData>/QMManager}">
								<layoutData>
									<l:GridData span="L6 M6 S8"/>
								</layoutData>
							</Input>
						</f:content>
					</f:SimpleForm>
				</IconTabFilter>
				<IconTabFilter id="itfTimeline" text="{i18n>projectTimeline}">
					<tb:Table id="tblProjectTL" rows="{MD_DATA>/Phase}" visibleRowCount="4">
						<tb:columns>
							<tb:Column visible="false">
								<Text text="{i18n>Phase}"/>
								<tb:template>
									<Text text="{MD_DATA>PhaseName}" ></Text>
								</tb:template>
							</tb:Column>
							<tb:Column>
								<Text text="{i18n>Phase}"/>
								<tb:template>
									<Text text="{MD_DATA>Description}"></Text>
								</tb:template>
							</tb:Column>
							<tb:Column>
								<Text text="{i18n>TimeLine}"/>
								<tb:template>
									<DateRangeSelection id="drsUATPhrase" valueFormat="yyyyMMdd" displayFormat="short" value="{MD_DATA>TimeLine}" enabled = "{= ${ProjectData>/mode} !== ''}"></DateRangeSelection>
								</tb:template>
							</tb:Column>
						</tb:columns>
					</tb:Table>
					<!--<Panel id="pnlSprint">-->
					<!--	<content>-->
					<tb:Table id="tblSPrintList" rows="{SprintData>/sprintList}" visibleRowCount="1">
						<tb:toolbar>
							<Toolbar>
								<Title text="Sprint Detail"/>
								<ToolbarSpacer/>
								<Label id="lblSpintCount" text="Sprint Count" labelFor="iptSprintNum"/>
								<Input id="iptSprintNum" width="5em" enabled = "{= ${ProjectData>/mode} !== ''}"/>
								<Button id="btnSplit" text="Split" press="onSplitSprint" type="Emphasized" enabled = "{= ${ProjectData>/mode} !== ''}"/>
							</Toolbar>
						</tb:toolbar>
						<tb:columns>
							<tb:Column>
								<Text text="Sprint n"/>
								<tb:template>
									<Input enabled = "{= ${ProjectData>/mode} !== ''}" value="{SprintData>Sprint_Id}" >
										<layoutData>
											<l:GridData span="L1 M1 S2"/>
										</layoutData>
									</Input>
								</tb:template>
							</tb:Column>
							<tb:Column>
								<Text text="Date Range"/>
								<tb:template>
									<DateRangeSelection value="{SprintData>Valid_Date}" displayFormat="short" enabled = "{= ${ProjectData>/mode} !== ''}">
										<layoutData>
											<l:GridData span="L3 M3 S4"/>
										</layoutData>
									</DateRangeSelection>
								</tb:template>
							</tb:Column>
						</tb:columns>
					</tb:Table>
					<!--	</content>-->
					<!--</Panel>-->
				</IconTabFilter>
				<IconTabFilter id="itfQgate" text="{i18n>qGate}">
					<f:SimpleForm id="sfmQgate" editable="true" layout="ResponsiveGridLayout" labelSpanL="2" labelSpanM="2" emptySpanL="0" emptySpanM="0"
						columnsL="1" columnsM="1" class="editableForm" title="{i18n>qgate}">
						<f:content>
							<!--Qgate Statue-->
							<Label id="lblQGateStatus" text="{i18n>qGateStatus}" labelFor="sltQGateStatus"></Label>
							<Select id="sltQGateStatus" change = "onDataChange" forceSelection="true" enabled = "{= ${ProjectData>/mode} !== ''}">
								<layoutData>
									<l:GridData span="L3 M3 S6"/>
								</layoutData>
								<items>
									<core:Item text="{i18n>qgates_NA}" key="NA"></core:Item>
									<core:Item text="{i18n>qgates_Pass}" key="PASS"></core:Item>
									<core:Item text="{i18n>qgates_Pass_W_Rsv}" key="PASS_W_RSV"></core:Item>
									<core:Item text="{i18n>qgates_Fail}" key="FAIL"></core:Item>
								</items>
							</Select>
							<Label id="lblQGateDate" text="{i18n>qGateDate}" labelFor="dpkQGateDate"></Label>
							<DatePicker id="dpkQGateDate" change = "onDataChange" valueFormat="yyyyMMdd" displayFormat="short" placeholder="Q-gate Date" enabled = "{= ${ProjectData>/mode} !== ''}">
								<layoutData>
									<l:GridData span="L3 M3 S6"/>
								</layoutData>
							</DatePicker>
						</f:content>
					</f:SimpleForm>
					<tb:Table id="tblProjectType" rows="{PT_QGate>/QGate}">
						<tb:columns>
							<tb:Column visible="false">
								<Text text="{i18n>QGate}"/>
								<tb:template>
									<Text text="{PT_QGate>QGate}"></Text>
								</tb:template>
							</tb:Column>
							<tb:Column>
								<Text text="{i18n>QGate}"/>
								<tb:template>
									<Text text="{PT_QGate>Description}"></Text>
								</tb:template>
							</tb:Column>
							<tb:Column>
								<Text text="Activated" />
								<tb:template>
									<CheckBox select = "onDataChange" enabled = "{= ${ProjectData>/mode} !== ''}"></CheckBox>
								</tb:template>
							</tb:Column>
						</tb:columns>
					</tb:Table>
				</IconTabFilter>
				<IconTabFilter id="itfComponent" text="{i18n>Component}">
					<tb:Table id="tblComponent" rows="{MD_COMP>/Component}" selectionMode="Single" visibleRowCount="4" rowSelectionChange="onRowSelectionChange">
						<tb:columns>
							<tb:Column visible="false">
								<Text text="{i18n>CompName}"/>
								<tb:template>
									<Text text="{MD_COMP>CompName}"></Text>
								</tb:template>
							</tb:Column>
							<tb:Column>
								<Text text="{i18n>CompName}"/>
								<tb:template>
									<Text text="{MD_COMP>Description}"></Text>
								</tb:template>
							</tb:Column>
							<tb:Column>
								<Text text="{i18n>Activate}"/>
								<tb:template>
									<CheckBox selected="{MD_COMP>Activated}" select="onCompSelect" enabled = "{= ${ProjectData>/mode} !== ''}"></CheckBox>
								</tb:template>
							</tb:Column>
						</tb:columns>
					</tb:Table>
					<!--<l:HorizontalLayout>-->
					<!--<l:content>-->
					<HBox fitContainer="true">
						<tb:Table id="tblActivity" rows="{MD_Activity>/Activity}" visibleRowCount="4" width="500px" selectionMode="Single"  rowSelectionChange="onActivityRowSelectionChange">
							<tb:toolbar>
								<Toolbar>
									<Title text="{MD_Activity>/Description} Activity"/>
								</Toolbar>
							</tb:toolbar>
							<tb:columns>
								<tb:Column visible="false">
									<Text text="{i18n>Name}"/>
									<tb:template>
										<Text text="{MD_Activity>Name}"></Text>
									</tb:template>
								</tb:Column>
								<tb:Column>
									<Text text="{i18n>Description}"/>
									<tb:template>
										<Text text="{MD_Activity>Description}"></Text>
									</tb:template>
								</tb:Column>
								<tb:Column>
									<Text text="{i18n>Activate}"/>
									<tb:template>
										<CheckBox select = "onDataChange" text="{MD_Activity>Activated}" enabled="{MD_Activity>/Activated}"></CheckBox>
									</tb:template>
								</tb:Column>
							</tb:columns>
						</tb:Table>
						<f:SimpleForm id="sfmDoc" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0"
							columnsL="1" columnsM="1" class="editableForm" visible = "{= ${DM_Activity_Assoc>/Category} !== ''}">
							<f:toolbar>
								<Toolbar>
									<Title text="{i18n>Setting}" />
								</Toolbar>
							</f:toolbar>
							<!--<core:Title text="{i18n>Setting}" emphasized="true"/>-->
							<Panel id="pnlDoc" headerText="{i18n>Documentation}" visible = "{= ${DM_Activity_Assoc>/Category} === 'DOC'}">
								<content>
									<!--<core:Title text="{i18n>Documentation}" emphasized="true"/>-->
									<RadioButtonGroup>
										<buttons>
											<RadioButton select = "onDataChange" id="rbnMandatory" text="Mandatory" enabled = "{= ${ProjectData>/mode} !== ''}"></RadioButton>
											<RadioButton select = "onDataChange" id="rbnOption" text="Optional" enabled = "{= ${ProjectData>/mode} !== ''}"></RadioButton>
										</buttons>
									</RadioButtonGroup>
								</content>
							</Panel>
							<Panel id="pnlPriority" headerText="{i18n>Priority}" visible = "{= ${DM_Activity_Assoc>/Category} === 'PRO'}">
								<VBox>
									<HBox>
										<CheckBox select = "onDataChange" id="ckbP1" text="Priority 1" enabled = "{= ${ProjectData>/mode} !== ''}"/>
										<Input id="txtP1" liveChange = "onDataChange" width="40px" enabled = "{= ${ProjectData>/mode} !== ''}"/>
									</HBox>
									<HBox>
										<CheckBox select = "onDataChange" id="ckbP2" text="Priority 2" enabled = "{= ${ProjectData>/mode} !== ''}"/>
										<Input id="txtP2" liveChange = "onDataChange" width="40px" enabled = "{= ${ProjectData>/mode} !== ''}"/>
									</HBox>
									<HBox>
										<CheckBox select = "onDataChange" id="ckbP3" text="Priority 3" enabled = "{= ${ProjectData>/mode} !== ''}"/>
										<Input id="txtP3" liveChange = "onDataChange" width="40px" enabled = "{= ${ProjectData>/mode} !== ''}"/>
									</HBox>
								</VBox>
							</Panel>
							<Panel id="pnlSecurity" headerText="{i18n>Security}" visible = "{= ${DM_Activity_Assoc>/Category} === 'SRV'}" >
								<VBox>
									<HBox>
										<CheckBox select = "onDataChange" id="ckbS_High" text="High" selected = "{DM_Activity_Assoc>/Security>SHigh}" enabled = "{= ${ProjectData>/mode} !== ''}"/>
										<Input id="txtS_High" width="40px"  value = "{DM_Activity_Assoc>/Security>SHigh_Value}" enabled = "{= ${ProjectData>/mode} !== ''}"/>
									</HBox>
									<HBox>
										<CheckBox id="ckbS_Medium" select = "onDataChange" text="Medium" selected = "{DM_Activity_Assoc>/Security>SMedium}" enabled = "{= ${ProjectData>/mode} !== ''}"/>
										<Input id="txtbS_Medium" liveChange = "onDataChange" width="40px" value = "{DM_Activity_Assoc>/Security>SMedium_Value}" enabled = "{= ${ProjectData>/mode} !== ''}"/>
									</HBox>
									<HBox>
										<CheckBox id="ckbS_Low" select = "onDataChange" text="Low" selected = "{DM_Activity_Assoc>/Security>SLow}" enabled = "{= ${ProjectData>/mode} !== ''}" />
										<Input id="txtS_Low" liveChange = "onDataChange" width="40px" value = "{DM_Activity_Assoc>/Security>SLow_Value}" enabled = "{= ${ProjectData>/mode} !== ''}" />
									</HBox>
								</VBox>
							</Panel>
						</f:SimpleForm>
					</HBox>
					<!--</l:content>-->
					<!--</l:HorizontalLayout>-->
					<!--</HBox>-->
				</IconTabFilter>
				<IconTabFilter id="itfAdmin" text="{i18n>Adminstrative_Data}">
					<f:SimpleForm id="sfmAdmin" editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="0" emptySpanM="0"
						columnsL="2" columnsM="2" class="editableForm">
						<f:content>
							<core:Title text="{i18n>Created}" emphasized="true"/>
							<Label id="lblCreateBy" text="Created By" labelFor="txtCreatedBy"/>
							<Text id="txtCreatedBy" text="Lean.Liu"/>
							<Label id="lblCreateOn" text="Created On" labelFor="txtCreatedOn"/>
							<Text id="txtCreatedOn" text="2016/09/07 14:00:00"/>
							<core:Title text="{i18n>Changed}" emphasized="true"/>
							<Label id="lblChangedBy" text="Changed By" labelFor="txtChangedBy"/>
							<Text id="txtChangedBy" text="Lean.Liu"/>
							<Label id="lblChangedOn" text="Created On" labelFor="txtChangedOn"/>
							<Text id="txtChangedOn" text="2016/09/07 14:00:00"/>
						</f:content>
					</f:SimpleForm>
				</IconTabFilter>
			</items>
		</IconTabBar>
		<!--</VBox>-->
		<!--<Panel backgroundDesign  = "Solid">-->
		<!--<IconTabBar id="itbTimeline" class="sapUiResponsiveContentPadding">-->
		<!--	<items>-->
		<!--		<IconTabFilter text="{i18n>projectTimeline}"></IconTabFilter>-->
		<!--		<IconTabFilter text="{i18n>qGate}"></IconTabFilter>-->
		<!--	</items>-->
		<!--</IconTabBar>-->
		<!--</Panel>-->
		<footer>
			<OverflowToolbar id="oftToolbar">
				<ToolbarSpacer/>
				<Button id="btnSave" text="Save" type="Emphasized" press = "onSave" icon="sap-icon://save" enabled = "{= ${ProjectData>/mode} === 'C' || ${ProjectData>/mode} === 'U'}"/>
				<Button id="btnEdit" text="Edit" icon="sap-icon://edit" enabled = "{= ${ProjectData>/mode} === ''}" press = "onEdit" />
				<Button id="btnCancel" text="Cancel" icon="sap-icon://cancel" press = "onCancelPress" enabled = "{= ${ProjectData>/mode} === 'U'}"/>
				<OverflowToolbarButton text="Add" icon="sap-icon://add" press = "onAddNewProject" enabled = "{= ${ProjectData>/mode} === '' || ${ProjectData>/mode} === 'U'}"/>
				<OverflowToolbarButton text="Delete" icon="sap-icon://delete" press = "onDeleteProject" enabled = "{= ${ProjectData>/mode} !== 'C' }"/>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>